<p style="color: green"><%= notice %></p>
<div class="container">
  <div class="container my-5">
  <div class="row justify-content-center">
    <div class="">
      <!-- Task Box -->
      <div class="card shadow-lg w-75 text-bg-secondary mb-3">
        <div class="card-header"><%= @task.title %></div>
        <div class="card-body">
          <p class="lead">Description: <%= @task.description %></p>
          <p class="lead">Due Date: <%= @task.due_date %></p>
          <p class="lead">Priority: <%= @task.priority %></p>
          <p class="lead">Completed: <%= @task.completed %></p>

          <br/>
          <!-- Buttons For Editing The Task Or Returning To All Tasks -->
          <%= link_to "Edit this task", edit_task_path(@task), class:"btn btn-primary"  %>
          <%= link_to "Back to Tasks", tasks_path, class:"btn btn-info"  %>

        </div>
      </div>     
    </div>
  </div>
  </div>
</div>
